<% provide :title, t(".title") %>
<!-- SORT -->
<div class="row pd-sort fix">
<div class="col-sm-1"></div>
<div class="col-sm-10 fix">
  <div class="prod-title">
    <a href="#">
      Product sort demo
    </a>
    <%= render "select_sort" %>
  </div>
  <div class="row product">
    <div class="col-sm-12">
      <% if @products.blank? %>
        <center>0 Result</center>
      <% else %>
        <% @products.each do |product| %>
        <div class="col-sm-2 pi fix">
          <%= link_to product do %>
            <%= image_tag(product.image, class: "img") %>
            <div class="content">
              <div class="line"></div>
              <p class="citem">$ <%= product.price %></p>
              <h4 class="citem"><%= product.name %></h4>
            </div>
            <div class="topbg">&nbsp;</div>
          <% end %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= will_paginate @products %>
</div>
<div class="col-sm-1"></div>
</div>
<!-- /SORT -->
